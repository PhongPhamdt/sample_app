<% @user ||= current_user %>
<div class="stats">
    <a href="<%= relationships_path(:id => @user, :type => 'following') %>">
     <strong id="following" class="stat">
      <%= @user.following.count %>
    </strong>
    <%= t ".following" %>
  </a>
  <a href="<%= relationships_path(:id => @user, :type => 'followers') %>">
    <strong id="followers" class="stat">
      <%= @user.followers.count %>
    </strong>
    <%= t ".followers" %>
  </a>
</div>
