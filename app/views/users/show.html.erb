<% provide :title, @user.name %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
      <div>
        <%= @user.gender %>
      </div>
      <div>
        <%= @user.date_of_birth %>
      </div>
    </section>
  </aside>
</div>
